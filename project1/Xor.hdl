/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
        Or(a=a, b=b, out=aorb);
        And(a=a, b=b, out=aandb);
        Not(in=aandb, out=naandb);
        And(a=aorb, b=naandb, out=out);
}
